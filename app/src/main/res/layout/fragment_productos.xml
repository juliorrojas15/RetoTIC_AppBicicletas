                    android:src="@drawable/producto_2"/>
                <TextView
                    android:id="@+id/productos_Texto2"
                    style="@style/sty_TextoProductos"
                    android:text="@string/producto2"/>
            </LinearLayout>

            <!-- PRODUCTO 3 -->
            <LinearLayout
                style="@style/sty_LayoutProductos"
                android:background="@color/beigeEmpresarial">
                <ImageView
                    android:id="@+id/productos_Imagen3"
                    style="@style/sty_ImagenProductos"
                    android:src="@drawable/producto_3"/>
                <TextView
                    android:id="@+id/productos_Texto3"
                    style="@style/sty_TextoProductos"
                    android:text="@string/producto3"/>
            </LinearLayout>

            <!-- PRODUCTO 4 -->
            <LinearLayout
                style="@style/sty_LayoutProductos"
                android:background="@color/beigeEmpresarial">
                <ImageView
                    android:id="@+id/productos_Imagen4"
                    style="@style/sty_ImagenProductos"
                    android:src="@drawable/producto_4"/>
                <TextView
                    android:id="@+id/productos_Texto4"
                    style="@style/sty_TextoProductos"
                    android:text="@string/producto4"/>
            </LinearLayout>

            <!-- PRODUCTO 5 -->
            <LinearLayout
                style="@style/sty_LayoutProductos"
                android:background="@color/beigeEmpresarial">
                <ImageView
                    android:id="@+id/productos_Imagen5"
                    style="@style/sty_ImagenProductos"
                    android:src="@drawable/producto_5"/>
                <TextView
                    android:id="@+id/productos_Texto5"
                    style="@style/sty_TextoProductos"
                    android:text="@string/producto5"/>
            </LinearLayout>




        </LinearLayout>

    </ScrollView>
</LinearLayout>